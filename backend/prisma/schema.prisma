generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName             String
  email                String   @unique
  password             String
  phone                String    @unique  
  nationalID           String
  role                 String
  phoneVerified        Boolean  @default(false)
  nationalIDVerified   Boolean  @default(false)
  otpCode              String?   
  otpExpiry            DateTime? 
  createdAt            DateTime @default(now())
}
